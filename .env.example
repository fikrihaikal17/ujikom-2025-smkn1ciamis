# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="Ujikom 2025 SMKN1 Ciamis"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Jakarta

APP_LOCALE=id
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug
LOG_STDERR_FORMATTER=Monolog\Formatter\JsonFormatter

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default for development)
DB_CONNECTION=sqlite
DB_DATABASE=database/database.sqlite

# MySQL Configuration (uncomment to use)
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=ujikom_2025_smkn1ciamis
# DB_USERNAME=root
# DB_PASSWORD=

# PostgreSQL Configuration (uncomment to use)
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=ujikom_2025_smkn1ciamis
# DB_USERNAME=postgres
# DB_PASSWORD=

# =============================================================================
# SESSION CONFIGURATION
# =============================================================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIES=false

# =============================================================================
# CACHE & QUEUE CONFIGURATION
# =============================================================================
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=ujikom_cache

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# MEMCACHED CONFIGURATION
# =============================================================================
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@ujikom2025.smkn1ciamis.sch.id"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# FILESYSTEM & AWS S3 CONFIGURATION
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# SANCTUM CONFIGURATION (API Authentication)
# =============================================================================
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1

# =============================================================================
# TELESCOPE CONFIGURATION (Development Debugging)
# =============================================================================
TELESCOPE_ENABLED=true

# =============================================================================
# HORIZON CONFIGURATION (Queue Management)
# =============================================================================
HORIZON_ENVIRONMENT=local

# =============================================================================
# SOCIAL AUTHENTICATION (OAuth)
# =============================================================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI="${APP_URL}/auth/google/callback"

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI="${APP_URL}/auth/facebook/callback"

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI="${APP_URL}/auth/github/callback"

# =============================================================================
# PUSHER CONFIGURATION (Real-time Broadcasting)
# =============================================================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# =============================================================================
# VITE CONFIGURATION (Frontend Build Tool)
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DISK=local
BACKUP_DESTINATION=backups

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
RATE_LIMIT_PER_MINUTE=60
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# =============================================================================
# UPLOAD CONFIGURATION
# =============================================================================
MAX_UPLOAD_SIZE=10240
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx,ppt,pptx

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
DEBUGBAR_ENABLED=true
CLOCKWORK_ENABLED=true
